    <form action="/api/login" method="POST">
        <input type="text" name="username" placeholder="username" /><br />
        <input type="test" name="password" placeholder="password" /><br />
        <button>Send</button>
    </form>

    <%- include('includes/footer') %>
    
</body>

</html>